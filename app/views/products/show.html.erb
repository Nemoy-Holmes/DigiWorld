
  <div class="container">
<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-sm-10 col-md-6">
<%= image_tag(@product.image_url, class: "img-responsive ") %>
</div>
<div class="col-sm-10 col-md-4">
	<div class="info">
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
