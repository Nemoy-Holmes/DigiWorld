<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "row">

    <div class= "col-sm-10 col-md-8">

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :product_name, placeholder: "name", required: "true" %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description, id: :product_description, placeholder: "description", required: "true" %>
      </div>

      <div class="field">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, id: :product_image_url, placeholder: "image", required: "true" %>
      </div>

      <div class="field">
        <%= form.label :colour %><br>
        <%= form.text_field :colour, placeholder: "color", required: "true" %>
      </div>
      <div>
        <%= form.label :price%><br>
        <%= form.text_field :price, placeholder: "price", required: "true" %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
  </div>
</div>
<% end %>
