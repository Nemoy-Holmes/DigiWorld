<div class="row container-fluid ">
  <h1>Your order:</h1>
    <% @orders.each do |order| %>
      <div class="col-sm-12 col-md-6">
        <h2>
          Order # <%= order.id %>:
        </h2>

        <h3>
          <%= link_to order.product.name, order.product %>
        </h3>
        <%= image_tag(order.product.image_url, class: "img-responsive")%>
        <p><%= order.product.description %></p>
        <p>$ <%= order.product.price %></p>

        <strong><%= "Your Total: #{order.total} $"%></strong>
        <%= link_to 'View', order, :class => "btn btn-info btn-link btn-lg"%>
      </div><!-- /col -->
    <% end %>

    <div  class= "text-center">
      <%= link_to 'Back', @product_path, :class => "btn btn-default btn-link btn-lg"%>
    </div>

</div>
