<div class="contact-body">
<div class="container">
<h1>Contact</h1>
<%= flash[:notice] %>
<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row">
	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: "true" %>
	</div>
	<div class="form-group">
		<%= form.label :email %>
		<%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: "true", type: "email"%>
	</div>
	<div class="form-group">
		<%= form.label :message %>
		<%= form.text_area :message, class: "form-control", placeholder: "Enter message", required: "true", rows: 5%>
	</div>
	
</div>
<%= form.submit "Send", class: "form_label"%>
<% end %>
</div>
</div>
